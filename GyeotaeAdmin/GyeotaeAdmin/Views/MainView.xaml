<Window x:Class="GyeotaeAdmin.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GyeotaeAdmin.Views"
        xmlns:vm="clr-namespace:GyeotaeAdmin.ViewModels"
        mc:Ignorable="d"
        Title="MainView"
        Width="1000" Height="800"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5 2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#34495E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="#2C3E50" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- 로고 및 타이틀 -->
                <RowDefinition Height="*"/>
                <!-- 메뉴 버튼 -->
                <RowDefinition Height="Auto"/>
                <!-- 하단 관리자 정보 -->
            </Grid.RowDefinitions>

            <!-- 🔹 상단: 관리자 메뉴 타이틀 -->
            <Button Grid.Row="0"
            Background="Transparent"
            BorderThickness="0"
            Cursor="Hand"
            Command="{Binding ClearViewCommand}"
            HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                    Margin="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <Image Source="/Images/TeamLogo.png"
                   Width="32" Height="32"
                   Margin="0,0,8,0"/>
                    <TextBlock Text="관리자 메뉴"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- 🔹 가운데: 메뉴 버튼들 -->
            <StackPanel Grid.Row="1" Margin="0 20">
                <Button Content="👤 ① 대상자 관리"
                Command="{Binding ShowUserViewCommand}"
                Style="{StaticResource MenuButtonStyle}"
                Margin="0 0 0 10"
                        />
                
                <Button Content="📋 ② 프로그램 관리"
                Command="{Binding ShowProgramViewCommand}"
                Style="{StaticResource MenuButtonStyle}"
                Margin="0 0 0 10"
                        />
                
                <Button Content="🌟 ③ 추천 및 매칭"
                Command="{Binding ShowMatchingViewCommand}"
                Style="{StaticResource MenuButtonStyle}"
                Margin="0 0 0 10"                        
                        />
                
                <Button Content="🗂 ④ 참여 이력"
                Command="{Binding ShowAttendanceViewCommand}"
                Style="{StaticResource MenuButtonStyle}"
                Margin="0 0 0 10"                        
                        />
                
                <Button Content="📊 ⑤ 통계 및 보고서"
                Command="{Binding ShowReportViewCommand}"
                Style="{StaticResource MenuButtonStyle}"
                Margin="0 0 0 10"                        
                        />
                
            </StackPanel>

            <!-- 🔹 하단: 관리자 정보 (고정) -->
            <StackPanel Grid.Row="2" Margin="10">
                <Separator Margin="0 10"/>
                <TextBlock Text="관리자: 홍길동"
                   Foreground="White"
                   FontSize="12"
                   Margin="0 5"/>
                <TextBlock Text="접속일: 2025-04-06"
                   Foreground="Gray"
                   FontSize="11"/>
            </StackPanel>
        </Grid>



        <Border Grid.Column="1" Padding="20">
            <Border.Background>
                <ImageBrush ImageSource="/Images/TeamLogo.png" Stretch="UniformToFill" Opacity="0.2"/>
            </Border.Background>

            <!-- 겹치기 위해 Grid로 감쌈 -->
            <Grid>

                <!-- 바인딩된 실제 컨텐츠 -->
                <ContentControl Content="{Binding CurrentView}" />

                <!-- ✅ CurrentView가 null일 때만 보일 홈 안내 화면 -->
                <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <!-- 제목 -->
                    <TextBlock Text="복지 프로그램 통합 관리 시스템"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       TextAlignment="Center"
                       Margin="0,30,0,0"/>

                    <!-- 설명 텍스트 -->
                    <TextBlock Text="안녕하세요, 관리자님!"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2c3e50"
                       TextAlignment="Center"
                       Margin="0,0,0,5"/>

                    <TextBlock Text="이 시스템은 다음 기능을 제공합니다:"
                       FontSize="14"
                       Foreground="Gray"
                       TextAlignment="Center"
                       Margin="0,0,0,5"/>

                    <TextBlock Text="① 대상자 관리"
                       FontSize="13"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
                    <TextBlock Text="② 프로그램 목록 조회"
                       FontSize="13"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
                    <TextBlock Text="③ 프로그램 추천 및 알림 전송"
                       FontSize="13"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
                    <TextBlock Text="④ 참여자 엑셀 등록후 전체적으로 관심이 높은 프로그램을 예측"
                       FontSize="13"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
                    <TextBlock Text="⑤ 통계 및 보고서 작성"
                       FontSize="13"
                       Foreground="Black"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

                    <TextBlock FontSize="12"
                       Foreground="DimGray"
                       TextAlignment="Center"
                       Height="487"
                       Width="544">
                    좌측 메뉴에서 원하는 기능을 선택해 주세요.
                    <LineBreak/>
                    관리자가 조금 더 편한 복지 시스템 알림과 사용자 관리,
                    <LineBreak/>
                    현재 실행 중이었던 프로그램에서
                    <LineBreak/>
                     어떤 게 미래에 관심도가 높을지를 정해주는 프로그램입니다.
                     <LineBreak/>
                     
                    </TextBlock>
                    <!-- Style Trigger: CurrentView가 null일 때만 보여짐 -->
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentView}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
